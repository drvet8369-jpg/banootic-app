
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access for providers, categories, and reviews
    match /providers/{providerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.phone_number == providerId;
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Allow users to manage their own inbox
    match /inboxes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to interact with chats
    match /chats/{chatId}/{document=**} {
       allow read, write: if request.auth != null;
    }

    // Settings can be read by anyone, but not written
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false; // Nobody can write to settings from the client
    }
    
    // Agreements can be created by customers, and updated by providers
    match /agreements/{agreementId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

  }
}
