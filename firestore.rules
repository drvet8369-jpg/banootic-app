
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for collections that everyone needs to see.
    match /providers/{providerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secure user-specific data.
    match /inboxes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth != null; // Further rules can check if user is in chat.
    }

    match /agreements/{agreementId} {
       allow read, write: if request.auth != null; // Further rules can check if user is part of agreement
    }
    
    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
