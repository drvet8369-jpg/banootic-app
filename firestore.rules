rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Providers can be read by anyone.
    // A user can create their own provider document.
    // A user can only update their own provider document.
    match /providers/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Reviews can be read by anyone.
    // An authenticated user can create a review.
    // No one can update or delete reviews for integrity.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // A user's inbox can only be read or written to by that user.
    match /inboxes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat messages can only be read or written by the participants of the chat.
    // The document key is expected to be "phone1_phone2" sorted alphabetically.
    match /chats/{chatId}/{messageId} {
       allow read, write: if request.auth != null && request.auth.uid in chatId.split('_');
    }
  }
}
