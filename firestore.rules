rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Allow server-side setup flow to write initial data
    // This requires a custom claim, which we won't implement now.
    // Instead, we will allow any authenticated user to create a provider doc for simplicity of setup.
    // In a production app, you would secure this further.
    match /providers/{providerId} {
      allow read: if true;
      allow create: if request.auth != null; // Any signed-in user can register as a provider.
      allow update: if isOwner(providerId); // Only the provider can update their own profile.
      allow delete: if false; // Disallow deletion for now.
    }

    match /reviews/{reviewId} {
      allow read: if true;
      // Allow any signed-in user to create a review.
      allow create: if request.auth != null;
      allow update, delete: if false; // Keep reviews immutable for now
    }
    
    match /agreements/{agreementId} {
      allow read, write: if request.auth != null;
    }

    // A user must be a member of the chat to read/write messages.
    // The chatId is composed of the two members' UIDs.
    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth != null && chatId.split('_').indexOf(request.auth.uid) != -1;
    }
    
    // A user can only access their own inbox document.
    match /inboxes/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Allow the server-side setup flow to check for its completion flag.
    match /_internal/setup_flag {
      allow read, write: if true; // In a production app, this would be locked down.
    }
  }
}
