rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for general app data like providers and reviews
    match /providers/{providerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /agreements/{agreementId} {
      allow read, write: if request.auth != null;
    }

    // Chats are private, only members can read/write
    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
    }
    
    // Inboxes are private to the user
    match /inboxes/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Settings document can be written once for initialization
    match /settings/initialData {
       allow read: if true;
       allow write: if !exists(/databases/$(database)/documents/settings/initialData);
    }
  }
}