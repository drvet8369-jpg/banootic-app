rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Providers can be read by anyone, but only created/updated by authenticated users.
    // The document ID must match the phone number of the user making the request.
    match /providers/{providerId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == providerId;
    }

    // Reviews can be read by anyone.
    // They can only be created or updated by an authenticated user.
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Settings can only be written to by authenticated users (for initialization)
    match /settings/initialData {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Chat messages can only be read/written by members of the chat.
    // The chat ID is composed of the two user phones, sorted.
    match /chats/{chatId}/messages/{messageId} {
       allow read, write: if isSignedIn() && request.auth.uid in chatId.split('_');
    }
    
    // Inbox data can only be accessed by the owner of the inbox.
    match /inboxes/{userId} {
       allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
