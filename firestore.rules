rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules: Allow read/write to all collections for now.
    // This allows us to build and test features without permission errors.
    // We will secure these rules properly once authentication is fully implemented.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
