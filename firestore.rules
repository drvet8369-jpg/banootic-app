
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Providers can be read by anyone, but only written by the authenticated provider themselves.
    match /providers/{providerPhone} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.phone_number == providerPhone;
    }

    // Reviews can be read by anyone, but only created by authenticated users.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // Disallow editing/deleting reviews for now
    }
    
    // Inboxes can only be accessed by their owner.
    match /inboxes/{userId} {
      allow read, write: if request.auth != null && request.auth.token.phone_number == userId;
    }

    // Chat messages can only be read/written by participants of the chat.
    // The chatId is assumed to be phone1_phone2 sorted alphabetically.
    match /chats/{chatId}/{message=**} {
      allow read, write: if request.auth != null && request.auth.token.phone_number in chatId.split('_');
    }

    // Settings collection for one-time initialization checks.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if false; // Should only be written via backend/script, not client
    }
  }
}
